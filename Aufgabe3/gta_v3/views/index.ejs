<!DOCTYPE html>

<!-- File origin: VS1LAB A3 -->

<html lang="en">
<head>
    <!-- Leaflet CSS and JavaScript -->
    <link
        rel="stylesheet"
        href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css"
        integrity="sha256-p4NxAoJBhIIN+hmNHrzRCf9tD/miZyoHS5obTRR9BMY="
        crossorigin=""
    />

    <script
        src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"
        integrity="sha256-20nQCchB9co0qIjJZRGuk2/Z9VM+kNiyxNV1lvTlZBo="
        crossorigin=""
    ></script>

    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>GeoTagApp</title>

    <link rel="stylesheet" href="/stylesheets/style.css">
    <link rel="icon" href="/favicon.ico">
</head>

<body>
<header class="header">
    <img src="/images/location.png" class="header__image" alt="map and location icon">
    <h1 class="header__title">GeoTagApp</h1>
    <nav class="header__navigation">
        <a href="#">About</a> | <a href="#">Help</a> | <a href="/">Home</a>
    </nav>
</header>

<main class="main">
    <div class="row">

        <!-- TAGGING -->
        <section class="main__tagging tagging col-4">
            <h2>Tagging</h2>

            <form id="tag-form" action="/tagging" method="post">
                <fieldset>
                    <legend>Add a new Tag</legend>

                    <div>
                        <label for="latitude">Latitude:</label>
                        <input
                            type="text"
                            id="latitude"
                            name="latitude"
                            value="<%= latitude ?? '' %>"
                            readonly
                        >
                    </div>

                    <div>
                        <label for="longitude">Longitude:</label>
                        <input
                            type="text"
                            id="longitude"
                            name="longitude"
                            value="<%= longitude ?? '' %>"
                            readonly
                        >
                    </div>

                    <div>
                        <label for="name">Name:</label>
                        <input
                            type="text"
                            id="name"
                            name="name"
                            maxlength="10"
                            pattern="^[A-Za-zÄÖÜäöüß]{1,10}$"
                            placeholder="e.g. Berlin"
                            required
                        >
                    </div>

                    <div>
                        <label for="hashtag">Hashtag:</label>
                        <input
                            type="text"
                            id="hashtag"
                            name="hashtag"
                            maxlength="11"
                            pattern="^#[A-Za-zÄÖÜäöüß]{1,10}$"
                            placeholder="#berlin"
                        >
                    </div>

                    <div>
                        <button type="submit">Add Tag</button>
                    </div>
                </fieldset>
            </form>
        </section>

        <!-- DISCOVERY -->
        <section class="main__discovery discovery col-8">
            <h2 class="discovery__title">Discovery</h2>

            <form
                class="discovery__search"
                id="discoveryFilterForm"
                action="/discovery"
                method="post"
            >
                <fieldset>
                    <legend>Search</legend>

                    <div>
                        <label for="searchterm">Search term:</label>
                        <input
                            type="text"
                            id="searchterm"
                            name="searchterm"
                            maxlength="10"
                            pattern="^[A-Za-zÄÖÜäöüß]{1,10}$"
                            placeholder="e.g. Berlin"
                        >
                    </div>

                  <!-- Koordinaten für Discovery --> 
                    <input type="hidden" id="disc-latitude" name="latitude" value="<%= latitude ?? '' %>" > 
                    
                    <input type="hidden" id="disc-longitude" name="longitude" value="<%= longitude ?? '' %>" >



                    <button type="submit">Search</button>
                </fieldset>
            </form>

            <div class="discovery__wrapper row">

                <!-- RESULTS -->
                <div class="discovery__taglist col-4">
                    <ul class="discovery__results" id="discoveryResults">
                        <% if (Array.isArray(taglist) && taglist.length) { %>
                            <% taglist.forEach(gtag => { %>
                                <li>
                                    <%= gtag.name %>
                                    (<%= gtag.latitude %>, <%= gtag.longitude %>)
                                    <%= gtag.hashtag %>
                                </li>
                            <% }) %>
                        <% } else { %>
                            <li>No GeoTags found</li>
                        <% } %>
                    </ul>
                </div>

                <!-- MAP -->
                <div
                    id="map"
                    class="discovery__map col-8"
                    data-tags='<%= JSON.stringify(taglist ?? []) %>'
                >
                    <img src="/images/mapview.jpg" alt="map placeholder" id="mapView">
                    <span>Result map</span>
                </div>

            </div>
        </section>

    </div>
</main>

<footer class="footer">
    <span>(c) 2021/22 HKA_IWI_VSYS</span>
</footer>

<!-- Client JavaScript -->
<script src="/javascripts/geotagging.js"></script>

</body>
</html>
